<div class="grid place-items-center h-screen">
  <div class="w-full max-w-md ">
    <%= form_with(model: order, html:{class:"bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"}) do |form| %>
      <% if order.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(order.errors.count, "error") %> prohibited this product from being saved:</h2>
          <ul>
            <% order.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :address, class:"block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_area :address, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :quantity, class:"block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.number_field :quantity, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :phone_number, class:"block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.number_field :phone_number, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <%= form.hidden_field :user_id, value: current_user.id %>

      <%= form.hidden_field :product_id, value: @product.id %>

      <div class="flex items-center justify-between">
        <%= form.submit "Submit", class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <%= link_to "Back to products", products_path, class:"inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
      </div>

    <% end %>
  </div>
</div>