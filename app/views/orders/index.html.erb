<div class="p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-5">
  <% @orders.each do |order|%>
    <div class="p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700 text-center">
        <a href="#">
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= order.product.title %></h5>
        </a>
        <p class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Address : <%= order.address %></p>
        <p class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Order by : <%= order.user.email %></p>
        <p class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Order at : <%= order.created_at.strftime('%b %d, %Y') %></p>
        <p class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Quantity : <%= order.quantity %></p>

        <%= link_to "Cancel", order_path(id: order.id, product_id: order.product.id), data: { turbo_method: :delete }, class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
        <%= link_to "edit", edit_order_path(id: order.id, product_id: order.product.id), class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
    </div>
  <% end %>
</div>