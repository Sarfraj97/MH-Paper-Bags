<div class="login-box">
<h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="user-box">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autocomplete: "first-name", placeholder: "Enter your First name" %>
    </div>

    <div class="user-box">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autocomplete: "last-name", placeholder: "Enter your last name"  %>
    </div>

    <div class="user-box">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter your Email" %>
    </div>
      
    <div class="user-box">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "( #{ @minimum_password_length } characters minimum )" if @minimum_password_length  %>
    </div>

    <div class="user-box">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :gender, "Male", :value => "true"  %>
      <%= f.radio_button :gender, true, checked: true %>
      <%= f.label :gender, "Female", :value => "false" %>
      <%= f.radio_button :gender, false %>
    </div>
    
    <div class="user-box">
      <%= f.label :phone %><br />
      <%= f.number_field :phone, autocomplete: "new-phone", placeholder: "Enter your phone number" %>
    </div>

    <div>
      <%= f.submit 'Sign Up', class: "login_btn" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>